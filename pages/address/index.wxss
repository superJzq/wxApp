/* pages/my_pages/address/index.wxss */

.container{
  background: #fff;
  margin-bottom: 4em;
}
/* 头部的线 */
.addrtop{
  padding: 5px;
  background: #8B572A;
  opacity: 0.5;
}
.addrtop view{
  height: 1px; 
  border-bottom: 1rpx dashed #fff;
} 
 
/* item */
.addrItems{
  display: flex;
  flex-direction: column;
  border-bottom:1em solid #f2f2f2;
}
.addrItems > view{
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.addrItems_info{
  border-bottom: 1px dashed rgb(240,240,240);
}
.addrItems_info > image{
  width: 1.4em;
  height: 1.4em;
}
.addrItems_info view{
  margin-left: 10px;
  font-size: small;
  display: flex;
  flex-direction: column;
}
.font2{
  margin-top: 5px;
}

.addrItems_deel{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: x-small;
  color: #aaa;
}
.addrItems_deel image{
  width: 1.4em;
  height: 1.4em;
  margin-right: 10px;
  border-radius: 50%;
}
.addrItems_deel .tomoren{
    display: flex;
  flex-direction: row;
  align-items: center;
}
.tomoren image{

}
.addrItems_deel .addrItems_deel_botton{
  display: flex;
  flex-direction: row;
}
.addrItems_deel_botton view{
  border: 1rpx solid #aaa;
  padding: 6px 8px;
  margin-left: 5px;
  border-radius: 3px;
  font-size: small;
}


/* 新增 */

.addnewAddr{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  background: #8B572A;
  font-size: x-small;
  padding-top: 5px;
  padding-bottom: 5px;
}
.addnewAddr image{
  width: 1.6em;
  height:1.6em;
}